<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameInterfaceActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsc_question"
        android:layout_width="0dp"
        android:layout_height="176dp"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:shadowColor="#FDFDFD"
            android:textColorHighlight="#090909"
            android:textColorHint="#FFFFFF"
            android:textColorLink="#FDFDFD"
            android:textSize="30sp"
            tools:visibility="visible" />


    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/btn_wantAnswer"
        android:layout_width="268dp"
        android:layout_height="135dp"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/textColorPrimary"
        android:text="Есть ответ!"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/tv_people"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="127dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressBar" />

    <TextView
        android:id="@+id/tv_timer2"
        android:layout_width="126dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:visibility="invisible"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="30dp"
        android:text="Счет:"
        android:textColor="@color/justBlack"
        android:textSize="15sp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/tv_timer"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_timer"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_numberOfRound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:text="Раунд:"
        android:textColor="@color/justBlack"
        android:textSize="15sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_timer2"
        app:layout_constraintTop_toTopOf="@+id/tv_timer"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_people"
        android:layout_width="309sp"
        android:layout_height="121sp"
        android:background="@drawable/border"
        android:text="Игроки:"
        android:textSize="15sp"
        android:textColor="@color/justBlack"
        app:layout_constraintBottom_toTopOf="@+id/btn_wantAnswer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_timer"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/btn_finallAnswer"
        android:layout_width="146dp"
        android:layout_height="74dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Ответить"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_enterAnswer"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="invisible" />

    <EditText
        android:id="@+id/et_enterAnswer"
        android:layout_width="314dp"
        android:layout_height="57dp"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:hint="Введите ответ"
        android:inputType="textPersonName"
        android:textColor="@color/colorAccent"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btn_finallAnswer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_people"
        app:layout_constraintVertical_bias="0.7" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="9dp"
        android:background="@color/colorAccent"
        android:max="20"
        android:orientation="horizontal"
        android:progress="0"
        android:progressTint="#F8F8F8"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/tv_timer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nsc_question"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_textquestion"
        android:layout_width="0sp"
        android:layout_height="163sp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:scrollbars="vertical"
        android:textColor="@color/justBlack"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/progressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="TextView" />

    <ImageView
        android:id="@+id/iv_gi_back_to_menu"
        android:layout_width="75dp"
        android:layout_height="77dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.363"
        app:srcCompat="@drawable/arrow_left_24px" />

    <ImageView
        android:id="@+id/iv_helpCallBot"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#DC1E1E"
        android:visibility="invisible"
        android:clickable="true"
        android:longClickable="true"
        app:layout_constraintStart_toStartOf="@+id/iv_gi_back_to_menu"
        app:layout_constraintTop_toBottomOf="@+id/tv_count"
        tools:srcCompat="@android:drawable/btn_star" />

    <ImageView
        android:id="@+id/iv_getOneChar"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        android:layout_marginEnd="8dp"
        android:background="#8B1515"
        android:clickable="true"
        android:longClickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_numberOfRound"
        tools:srcCompat="@android:drawable/btn_star" />


</androidx.constraintlayout.widget.ConstraintLayout>
