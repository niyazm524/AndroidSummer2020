<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameInterfaceActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="9dp"
        android:background="@color/colorAccent"
        android:max="20"
        android:orientation="horizontal"
        android:progress="0"
        android:progressTint="#F8F8F8"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/tv_timer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nsc_question"
        tools:visibility="visible" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsc_question"
        android:layout_width="0dp"
        android:layout_height="176dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/progressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_questions"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2sp"
            android:gravity="center"
            android:shadowColor="#FDFDFD"
            android:textColorHighlight="#090909"
            android:textColorHint="#FFFFFF"
            android:textColorLink="#FDFDFD"
            android:textSize="30sp"
            tools:visibility="visible" />


    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/btn_wantAnswer"
        android:layout_width="268dp"
        android:layout_height="135dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Есть ответ!"
        android:textColor="@color/textColorPrimary"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_people" />

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/progressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nsc_question"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="127dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressBar" />

    <TextView
        android:id="@+id/tv_timer2"
        android:layout_width="126dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/tv_people"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_count"

        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:text="Счет:"
        android:textColor="@color/justBlack"

        android:textSize="15sp"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_timer2"
        app:layout_constraintEnd_toStartOf="@+id/tv_timer"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/iv_gi_back_to_menu"
        android:layout_width="66dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_people"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_count"
        app:layout_constraintVertical_bias="0.392"
        app:srcCompat="@drawable/arrow_left_24px" />

    <TextView
        android:id="@+id/tv_numberOfRound"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:textAlignment="viewEnd"
        android:text="Раунд:"
        android:textColor="@color/justBlack"
        android:textSize="15sp"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_timer2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.232"
        app:layout_constraintStart_toEndOf="@+id/tv_timer2"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_people"
        android:layout_width="300dp"
        android:layout_height="116dp"
        android:background="@drawable/border"
        android:padding="8dp"
        android:text="Игроки:"
        android:textColor="@color/justBlack"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_wantAnswer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_timer"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/btn_finallAnswer"
        android:layout_width="146dp"
        android:layout_height="74dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Ответить"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_enterAnswer"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="invisible" />

    <EditText
        android:id="@+id/et_enterAnswer"
        android:layout_width="314dp"
        android:layout_height="57dp"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:hint="Введите ответ"
        android:inputType="textPersonName"
        android:textColor="@color/colorAccent"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btn_finallAnswer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_people"
        app:layout_constraintVertical_bias="0.7" />


    <TextView
        android:id="@+id/tv_textquestion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:scrollbars="vertical"
        android:textColor="@color/justBlack"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/progressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="TextView" />

    <ImageView
        android:id="@+id/iv_helpCallBot"
        android:layout_width="57dp"
        android:layout_height="40dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/et_enterAnswer"
        app:layout_constraintStart_toStartOf="@+id/tv_people"
        app:layout_constraintTop_toBottomOf="@+id/tv_people"
        app:layout_constraintVertical_bias="0.100000024"
        app:srcCompat="@drawable/call_black_18dp" />

    <ImageView
        android:id="@+id/iv_getOneChar"
        android:layout_width="55dp"
        android:layout_height="48dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/et_enterAnswer"
        app:layout_constraintEnd_toEndOf="@+id/tv_people"
        app:layout_constraintTop_toBottomOf="@+id/tv_people"
        app:layout_constraintVertical_bias="0.100000024"
        app:srcCompat="@drawable/text_rotation_none_black_18dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
