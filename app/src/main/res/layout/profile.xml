<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".SplashActivity">

    <TextView
        android:id="@+id/profile_text_name"
        android:layout_width="315dp"
        android:layout_height="68dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/profile_text_default_name"
        android:textColor="@color/justBlack"
        android:textColorHint="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.081" />

    <TextView
        android:id="@+id/profile_text_score"
        android:layout_width="332dp"
        android:layout_height="117dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/profile_text_default_score"
        android:textColor="@color/justBlack"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.234" />

    <Button
        android:id="@+id/profile_button_sign_out"
        android:layout_width="142sp"
        android:layout_height="60sp"
        android:background="@color/colorAccent"
        android:text="@string/profile_button_sign_out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_text_score"
        app:layout_constraintVertical_bias="0.36" />

    <Button
        android:id="@+id/profile_button_reset_score"
        android:layout_width="142sp"
        android:layout_height="60sp"
        android:background="@color/colorAccent"
        android:text="@string/profile_button_reset_score"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_button_sign_out"
        app:layout_constraintVertical_bias="0.246" />

    <TextView
        android:id="@+id/profile_text_user_can_settings"
        android:layout_width="225dp"
        android:layout_height="58dp"
        android:layout_marginTop="37dp"
        android:text="@string/profile_text_user_can_settings"
        android:textColor="@color/justBlack"
        android:textSize="25sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.417" />

</androidx.constraintlayout.widget.ConstraintLayout>
