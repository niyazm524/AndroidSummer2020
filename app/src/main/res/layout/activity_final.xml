<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinalActivity">

    <TextView
        android:id="@+id/tv_final_text"
        android:layout_width="408dp"
        android:layout_height="81dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/end"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.093" />

    <TextView
        android:id="@+id/tv_final_user_score"
        android:layout_width="348dp"
        android:layout_height="44dp"
        android:layout_marginTop="73dp"
        android:text="TextView"
        android:textColor="@color/justBlack"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_final_text"
        app:layout_constraintVertical_bias="0.045" />

    <TextView
        android:id="@+id/tv_final_bot_score"
        android:layout_width="348dp"
        android:layout_height="44dp"
        android:layout_marginTop="120dp"
        android:text="TextView"
        android:textColor="@color/justBlack"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_final_user_score"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_final_game_over"
        android:layout_width="190dp"
        android:layout_height="79dp"
        android:layout_marginTop="135dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Завершить игру"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.429"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.86" />
</androidx.constraintlayout.widget.ConstraintLayout>